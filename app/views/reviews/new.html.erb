<h1>Add a Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to restaurant", restaurant_path(@restaurant), class: "btn btn-secondary" %>
